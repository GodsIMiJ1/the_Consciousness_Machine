# ⚔️ SOVEREIGN AGA AURA-BREE Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# FLAME ROUTER - Multi-Provider AI Configuration
# =============================================================================

# Provider priority order (comma-separated)
# Options: ollama, lmstudio, hf, openai
VITE_FLAME_PROVIDER_PRIORITY=ollama,lmstudio,hf,openai

# Request timeout in milliseconds
VITE_FLAME_TIMEOUT_MS=30000

# Maximum retries per provider
VITE_FLAME_MAX_RETRIES=2

# =============================================================================
# LOCAL AI PROVIDERS
# =============================================================================

# Ollama Configuration
VITE_OLLAMA_BASE_URL=http://localhost:11434

# LM Studio Configuration
VITE_LMSTUDIO_BASE_URL=http://localhost:1234/v1

# =============================================================================
# CLOUD AI PROVIDERS (Consent-Gated)
# =============================================================================

# Hugging Face Configuration
VITE_HF_API_BASE=https://api-inference.huggingface.co
VITE_HF_API_KEY=

# OpenAI Configuration (Legacy Support)
VITE_OPENAI_API_BASE=https://api.openai.com/v1
VITE_OPENAI_API_KEY=

# =============================================================================
# SOVEREIGN CLINIC INTEGRATION (MethaClinic)
# =============================================================================

# Clinic Server Configuration
VITE_CLINIC_SERVER_URL=https://clinic.local
VITE_CLINIC_JWT_ISSUER=MethaClinic
VITE_CLINIC_JWT_PUBLIC_KEY=

# =============================================================================
# SECURITY & PRIVACY CONFIGURATION
# =============================================================================

# PII Redaction Settings
VITE_PII_REDACTION_ENABLED=true
VITE_CLOUD_CONSENT_REQUIRED=true
VITE_PRIVACY_MODE_DEFAULT=sovereign

# Audit System
VITE_AUDIT_HASH_CHAIN_ENABLED=true
VITE_LOG_LEVEL=info

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================

# App Behavior
VITE_APP_MODE=sovereign
VITE_OFFLINE_FIRST=true

# Voice Features (Optional)
VITE_ELEVENLABS_API_KEY=
