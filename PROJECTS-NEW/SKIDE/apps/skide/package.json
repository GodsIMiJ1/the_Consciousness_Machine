{
  "name": "skide",
  "version": "0.1.0",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:main\" \"pnpm run dev:renderer\"",
    "dev:main": "vite build --config vite.main.config.ts --mode development --watch",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "build": "pnpm run build:main && pnpm run build:renderer",
    "build:main": "vite build --config vite.main.config.ts",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "lint": "eslint src/ --ext .ts,.tsx",
    "test": "vitest"
  },
  "dependencies": {
    "@kodii/core": "workspace:*",
    "@skide/chat-threads": "workspace:*",
    "@skide/project-brain": "workspace:*",
    "@skide/db-layer": "workspace:*",
    "electron": "^28.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@monaco-editor/react": "^4.6.0",
    "lucide-react": "^0.300.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron-builder": "^24.8.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
